<%= render "users/shared/account-settings"%>
    <div class="border-bottom">
        <h3>プロフィール</h3>
    </div>
    <%= render 'users/shared/profile_error', obj: @user %>

    <%= form_with model:@user, url:users_profile_path do |f| %>
        <table>
            <tr>
                <th><%= f.label :icon, "アイコン画像" %></th>
                <td><%= f.file_field :icon %></td>
            </tr>

            <tr>
                <th><%= f.label :user_name, "名前" %></th>
                <td><%= f.text_field :user_name %></td>
            </tr>

            <tr>
                <th><%= f.label :introduce, "自己紹介" %></th>
                <td><%= f.text_area :introduce %></td>
            </tr>
        </table>
                <%= f.hidden_field :user_id, value: current_user.id %>
            <%= f.submit "保存" %>
            <%= link_to "キャンセル", :back %>
    <% end %>





    

